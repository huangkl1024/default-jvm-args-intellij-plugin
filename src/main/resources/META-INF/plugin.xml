<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.huangkl1024.javarunconfigurationinterceptor</id>
    <name>java-run-configuration-interceptor</name>
    <vendor>huangkl1024</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.huangkl1024.javarunconfigurationinterceptor.toolWindow.MyToolWindowFactory"
                    id="MyToolWindow"/>
        <runConfigurationExtension
                implementation="com.github.huangkl1024.javarunconfigurationinterceptor.extension.ApplicationConfigurationInterceptor"/>
        <applicationConfigurable
                parentId="tools"
                instance="com.github.huangkl1024.javarunconfigurationinterceptor.configurable.ApplicationConfigurable"
                id="com.github.huangkl1024.javarunconfigurationinterceptor.configurable.ApplicationConfigurable"
                displayName="Java程序运行配置拦截器（全局）"/>
        <projectConfigurable
                parentId="tools"
                instance="com.github.huangkl1024.javarunconfigurationinterceptor.configurable.ProjectConfigurable"
                id="com.github.huangkl1024.javarunconfigurationinterceptor.configurable.ProjectConfigurable"
                displayName="Java程序运行配置拦截器（项目）"
                nonDefaultProject="true"/>
    </extensions>

    <applicationListeners>
        <listener
                class="com.github.huangkl1024.javarunconfigurationinterceptor.listener.MyApplicationActivationListener"
                topic="com.intellij.openapi.application.ApplicationActivationListener"/>
    </applicationListeners>
</idea-plugin>
