<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.huangkl1024.defaultrunargs</id>
    <name>Default Run Args</name>
    <vendor>huangkl1024</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <runConfigurationExtension
                implementation="com.github.huangkl1024.defaultrunargs.DefaultRunArgsExtension"/>
        <applicationConfigurable
                parentId="tools"
                instance="com.github.huangkl1024.defaultrunargs.application.ApplicationSettings"
                id="com.github.huangkl1024.defaultrunargs.application.ApplicationSettings"
                bundle="messages.MyBundle"
                key="default.run.args.application.settings.display.name"/>
        <projectConfigurable
                parentId="tools"
                instance="com.github.huangkl1024.defaultrunargs.project.ProjectSettings"
                id="com.github.huangkl1024.defaultrunargs.project.ProjectSettings"
                bundle="messages.MyBundle"
                key="default.run.args.project.settings.display.name"
                nonDefaultProject="true"/>
    </extensions>
</idea-plugin>
